<Window x:Class="ShopWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shop Application" Height="450" Width="800">
    <Grid>
        
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="Menu">
                <MenuItem Header="View Categories" Click="ViewCategories_Click"/>
                <MenuItem Header="View Products" Click="ViewProducts_Click"/>
                <MenuItem Header="View Cart" Click="ViewCart_Click"/>
            </MenuItem>
        </Menu>

        
        <TextBlock Text="Welcome to the Shop!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
    </Grid>
</Window>
